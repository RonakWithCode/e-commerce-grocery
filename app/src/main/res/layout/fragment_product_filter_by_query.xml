<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundColor"
    tools:context=".Fragment.ProductFilterByQueryFragment">

    <ImageView
        android:id="@+id/order_details_view_back"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:contentDescription="@string/tap_back" />

    <TextView
        android:id="@+id/title_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/search"
        android:layout_toEndOf="@id/order_details_view_back"
        android:gravity="center"
        android:paddingEnd="25dp"
        android:textColor="@color/MainTextColor"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/search"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="25dp"
        android:layout_alignParentEnd="true"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_search_24"
        android:contentDescription="@string/search" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ProductLIST"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/title_Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progressCircular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>

