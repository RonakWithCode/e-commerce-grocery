<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp">
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:background="@drawable/rounded_corners"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:paddingEnd="10dp"
        android:src="@drawable/banner2"
        tools:ignore="RtlSymmetry"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_toEndOf="@id/product_image"
        android:text="Fortune Sun Lite Refined Sunflower Oil"
        android:textColor="@color/green_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/product_pricing_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/product_image"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="112.50"
            android:textColor="@color/MainTextColor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/product_qty_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/product_qty_down"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/product_qty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/secondary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/product_qty_up"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_add_circle_outline_24"
                tools:ignore="NestedWeights" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_below="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/line2"
        android:background="@color/MainBorderColor"
        android:alpha="0.9"/>
</RelativeLayout>
