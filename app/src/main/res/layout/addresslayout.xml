<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:padding="@dimen/_3sdp">
        <ImageView
            android:id="@+id/AddressType"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/_52sdp"
            android:layout_height="@dimen/_55sdp"
            android:src="@drawable/office_building" />

        <TextView
            android:id="@+id/deliveryTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_toEndOf="@+id/AddressType"
            android:layout_alignParentTop="true"
            android:text="Delivering to Home"
            android:textAlignment="textStart"
            android:textColor="@color/MainTextColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/deliveryAddress"
            android:layout_width="@dimen/_171sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deliveryTo"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/AddressType"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:text="6391 Elgin St. Celina, DelawareDelawareDelaware..."
            android:textColor="@color/HintMainTextColor"
            android:textSize="@dimen/_13ssp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_toEndOf="@id/deliveryTo"
            android:text="@string/edit_address"
            android:textColor="@color/orange_secondary"
            android:textSize="@dimen/_13ssp"
            tools:ignore="RelativeOverlap" />


        <ImageButton
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_below="@id/edit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@null"
            android:contentDescription="@string/tap_to_show_menu"
            android:src="@drawable/ic_baseline_delete_24" />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            app:dividerColor="@color/secondary" />



</RelativeLayout>