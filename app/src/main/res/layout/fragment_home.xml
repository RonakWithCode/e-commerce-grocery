<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundColor"
    tools:context=".Fragment.HomeFragment">



    <RelativeLayout
        android:id="@+id/Category_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:background="@color/Banner_Colors"
            app:autoWidthFixing="true"
            app:bottomShadowAlpha="0.6"
            app:captionMargin="0dp"
            app:captionTextSize="14sp"
            app:carouselBackground="#00000000"
            app:carouselGravity="CENTER"
            app:carouselPadding="0dp"
            app:carouselPaddingBottom="0dp"
            app:carouselPaddingEnd="0dp"
            app:carouselPaddingStart="0dp"
            app:carouselPaddingTop="0dp"
            app:imagePlaceholder="@drawable/placeholder"
            app:imageScaleType="fitCenter"
            app:indicatorMargin="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:nextButtonMargin="4dp"
            app:previousButtonMargin="4dp"
            app:scaleOnScroll="true"
            app:showBottomShadow="false"
            app:showCaption="false"
            app:showIndicator="true"
            app:showNavigationButtons="true"
            app:showTopShadow="false"
            app:topShadowAlpha="0.6"
            app:topShadowHeight="32dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_2sdp"
            android:text="Bestsellers"
            android:textColor="@color/MainTextColor"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_below="@+id/carousel"/>

        <TextView
            android:id="@+id/BestsellersSee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:text="@string/see_all"
            android:textColor="@color/green_primary"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/carousel"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"/>

        <TextView
            android:id="@+id/Grocery_Kitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:padding="@dimen/_2sdp"
            android:text="Grocery &amp; Kitchen"
            android:textColor="@color/MainTextColor"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recycler_category"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/GridLayout"
            android:layout_width="match_parent"
            android:layout_below="@+id/Grocery_Kitchen"
            android:layout_height="wrap_content">
            <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:columnCount="4"
            android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toTopOf="parent"
            android:rowCount="4"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/Atta_RiceDal"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/FixColorWhite"
                    android:src="@drawable/delivery_truck" />
                <TextView
                    android:textColor="@color/MainTextColor"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Atta, Rice &amp;\n Dal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.github.chrisbanes.photoview.PhotoView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/FixColorWhite"
                    android:id="@+id/skin"
                    android:src="@drawable/delivery_truck" />
                <TextView
                    android:textColor="@color/MainTextColor"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="skin care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_row="0"
                android:layout_column="2"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/drinks"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/FixColorWhite"
                    android:src="@drawable/delivery_truck" />
                <TextView
                    android:textColor="@color/MainTextColor"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="drinks &amp;\n juice "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_row="0"
                android:layout_column="3"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/milk"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/FixColorWhite"
                    android:src="@drawable/delivery_truck" />
                <TextView
                    android:textColor="@color/MainTextColor"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="milk &amp;\n paneer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- First Product Image -->

            <!-- Second Product Image -->


            <!-- Third Product Image -->


            <LinearLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/Bakery"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/FixColorWhite"
                    android:src="@drawable/delivery_truck" />
                <TextView
                    android:textColor="@color/MainTextColor"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Bakery &amp;\nBiscuits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_row="1"
                android:layout_column="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/oil"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/FixColorWhite"
                    android:src="@drawable/delivery_truck" />
                <TextView
                    android:textColor="@color/MainTextColor"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="oil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_4sdp"

                android:layout_width="match_parent"
                android:layout_row="1"
                android:layout_column="2"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/View2"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"

                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/FixColorWhite"
                    android:src="@drawable/delivery_truck" />
                <TextView
                    android:textColor="@color/MainTextColor"
                    android:textAlignment="center"
                    android:layout_gravity="center"                    android:text="Atta, Rice &amp;\n Dal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_4sdp"

                android:layout_width="match_parent"
                android:layout_row="1"
                android:layout_column="3"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/View1"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"

                    android:layout_margin="@dimen/_3sdp"
                    android:background="@color/FixColorWhite"
                    android:src="@drawable/delivery_truck" />
                <TextView
                    android:textColor="@color/MainTextColor"
                    android:textAlignment="center"
                    android:layout_gravity="center"                    android:text="Atta, Rice &amp;\n Dal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/boysSkinCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:padding="@dimen/_2sdp"
            android:text="boys skin care"
            android:textColor="@color/MainTextColor"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/GridLayout" />

        <TextView
            android:id="@+id/boysSkinCareSee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:text="@string/see_all"
            android:textColor="@color/green_primary"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/GridLayout"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/boys_skin_care_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/boysSkinCare" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TopBrandText"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:padding="@dimen/_2sdp"
            android:text="Top Brand"
            android:textColor="@color/MainTextColor"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_below="@id/boys_skin_care_RecyclerView"
            android:layout_alignParentStart="true"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/TopBrand"
            android:layout_below="@+id/TopBrandText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:columnCount="4"
                android:padding="@dimen/_4sdp"
                android:rowCount="1"
                android:background="@color/light_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:orientation="vertical">

                    <com.github.chrisbanes.photoview.PhotoView
                        android:id="@+id/Dabur"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/FixColorWhite"
                        android:src="@drawable/delivery_truck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/dabur"
                        android:textAlignment="center"
                        android:textColor="@color/MainTextColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:orientation="vertical">

                    <com.github.chrisbanes.photoview.PhotoView
                        android:id="@+id/itc"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/FixColorWhite"
                        android:src="@drawable/delivery_truck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/itc"
                        android:textAlignment="center"
                        android:textColor="@color/MainTextColor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:orientation="vertical">

                    <com.github.chrisbanes.photoview.PhotoView
                        android:id="@+id/view3"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/FixColorWhite"
                        android:src="@drawable/delivery_truck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/itc"
                        android:textAlignment="center"
                        android:textColor="@color/MainTextColor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:orientation="vertical">

                    <com.github.chrisbanes.photoview.PhotoView
                        android:id="@+id/view4"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/FixColorWhite"
                        android:src="@drawable/delivery_truck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/itc"
                        android:textAlignment="center"
                        android:textColor="@color/MainTextColor" />
                </LinearLayout>

            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MultiViewAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/TopBrand"
            app:layout_constraintTop_toBottomOf="@id/TopBrand" />
    </RelativeLayout>
</ScrollView>
