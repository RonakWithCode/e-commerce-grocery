<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/Category_RelativeLayout"
                android:layout_width="match_parent"
                android:background="@color/MainBannerColor"
                android:layout_height="wrap_content">

            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                android:id="@+id/carousel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                app:showCaption="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:captionMargin="0dp"
                app:captionTextSize="14sp"
                app:indicatorMargin="0dp"
                app:imageScaleType="centerCrop"
                app:carouselPadding="0dp"
                app:carouselPaddingBottom="0dp"
                app:carouselPaddingEnd="0dp"
                app:carouselPaddingStart="0dp"
                app:carouselPaddingTop="0dp"
                app:previousButtonMargin="4dp"
                app:nextButtonMargin="4dp"
                app:autoPlay="false"
                app:autoPlayDelay="3000"
                app:touchToPause="true"/>


            <TextView
                android:layout_below="@+id/carousel"
                android:id="@+id/category_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:text="@string/top_category"
                android:textColor="@color/MainTextColor"
                android:textSize="@dimen/_17ssp" />

            <TextView
                android:id="@+id/category_see_more"
                android:layout_below="@+id/carousel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/see_more"
                android:layout_marginEnd="@dimen/_9sdp"
                android:textColor="@color/green_primary"
                android:textSize="@dimen/_17ssp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_view_text"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/coupon_code_box_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/category"
                android:layout_marginTop="2dp"
                app:dividerColor="@color/secondary" />
            </RelativeLayout>


            <LinearLayout
                android:layout_below="@id/Category_RelativeLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/MainTextColor"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2ssp"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="italic"
                        android:id="@+id/hint_chips_and_snacks"
                        android:text="@string/chips_and_snacks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/chips_and_snacks_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/see_more"
                        android:layout_marginTop="@dimen/_2ssp"
                        android:layout_marginEnd="@dimen/_9sdp"
                        android:textColor="@color/green_primary"
                        android:textSize="@dimen/_17ssp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/chips_and_snacks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hint_chips_and_snacks"
                        android:layout_marginBottom="@dimen/_2ssp"
                        android:layout_marginTop="@dimen/_1sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                <TextView
                    android:textColor="@color/MainTextColor"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="italic"
                    android:text="@string/dairy"
                    android:id="@+id/Hint_dairy_see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/dairy_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/see_more"
                        android:layout_marginTop="@dimen/_2ssp"
                        android:layout_marginEnd="@dimen/_9sdp"
                        android:textColor="@color/green_primary"
                        android:textSize="@dimen/_17ssp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Dairy_products"
                    android:layout_below="@+id/Hint_dairy_see_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2ssp"
                    android:layout_marginTop="@dimen/_1sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/byBrand_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/see_more"
                        android:layout_marginTop="@dimen/_2ssp"
                        android:layout_marginEnd="@dimen/_9sdp"
                        android:textColor="@color/green_primary"
                        android:textSize="@dimen/_17ssp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/byBrand"
                        android:layout_below="@+id/byBrand_see_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2ssp"
                        android:layout_marginTop="@dimen/_5sdp" />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/MainTextColor"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="italic"
                    android:id="@+id/hint_for_you_teeth"
                    android:text="@string/for_you_teeth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/for_you_teeth_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/see_more"
                        android:layout_marginTop="@dimen/_2ssp"
                        android:layout_marginEnd="@dimen/_9sdp"
                        android:textColor="@color/green_primary"
                        android:textSize="@dimen/_17ssp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/for_you_teeth"
                    android:layout_below="@+id/hint_for_you_teeth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2ssp"
                    android:layout_marginTop="@dimen/_1sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/MainTextColor"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="italic"
                    android:text="@string/drinks"
                    android:id="@+id/hint_drinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/drinks_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/see_more"
                        android:layout_marginTop="@dimen/_2ssp"
                        android:layout_marginEnd="@dimen/_9sdp"
                        android:textColor="@color/green_primary"
                        android:textSize="@dimen/_17ssp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/drinks"
                    android:layout_below="@+id/hint_drinks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2ssp"
                    android:layout_marginTop="@dimen/_1sdp" />



                </RelativeLayout>



            </LinearLayout>


            <ProgressBar
                android:id="@+id/ChatsProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

