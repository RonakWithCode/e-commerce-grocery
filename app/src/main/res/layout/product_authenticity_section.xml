<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_8sdp">
    <ImageView
        android:id="@+id/icon_genuine_products"
        android:layout_width="@dimen/_80sdp"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent"
        android:src="@drawable/ic_genuine_products" />
    <LinearLayout
        android:layout_marginStart="@dimen/_7sdp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_genuine_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genuine_products"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_genuine_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/our_products_are_100_authentic_sourced_from_trusted_brands_and_suppliers"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>

</LinearLayout>
