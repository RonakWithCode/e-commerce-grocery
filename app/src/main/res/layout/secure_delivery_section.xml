<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_8sdp">
    <ImageView
        android:id="@+id/icon_secure_delivery"
        android:layout_width="@dimen/_80sdp"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_secure_delivery" />
    <LinearLayout
        android:layout_marginStart="@dimen/_7sdp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_secure_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secure_delivery"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_secure_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ensuring that your products arrive safely and securely with every order."
        android:textSize="@dimen/_14ssp" />
    </LinearLayout>

</LinearLayout>
