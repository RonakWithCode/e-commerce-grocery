<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundColor"
    android:orientation="vertical"
    tools:context=".Fragment.SiginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
        android:id="@+id/loginIcon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"
        android:contentDescription="@string/icon" />


    <TextView
        android:id="@+id/heading"
        android:layout_below="@id/loginIcon"
        android:text="Welcome to"
        android:textSize="@dimen/_26ssp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/FixBlack"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/MainHeading"
        android:layout_below="@id/heading"
        android:text="Alwar Mart"
        android:textStyle="bold"
        android:textColor="@color/FixBlack"
        android:textSize="@dimen/_39ssp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/paragraph"
        android:layout_below="@id/MainHeading"
        android:text="Estimated delivery within 45 minutes"
        android:textStyle="normal"
        android:textColor="@color/FixBlack"
        android:textSize="@dimen/_12ssp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="+91 123 456 7890"
        android:layout_below="@id/paragraph"
        android:layout_marginStart="@dimen/_35sdp"
        android:textSize="@dimen/_18ssp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:prefixTextColor="@color/MainTextColor"
        app:prefixText="+91">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="10"
            android:textColor="@color/MainTextColor"
            android:textColorHint="@color/MainTextColor"
            android:background="@drawable/underline_drawable" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_input_layout"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_alignStart="@+id/phone_input_layout"
        android:layout_marginTop="@dimen/_19sdp"
        android:autoLink="web"
        android:text="@string/accept_terms_and_conditions"
        android:textColor="@color/MainTextColor" />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_input_layout"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toEndOf="@id/checkBox"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/read_more"
        android:textColor="@color/Link" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:backgroundTint="@color/green_primary"
        android:background="@drawable/round_button"
        android:text="@string/continue_text"
        android:layout_marginTop="@dimen/_10sdp"
        app:cornerRadius="@dimen/_16sdp"
        android:textColor="@color/FixColorWhite"
        android:textSize="@dimen/_13ssp"
        android:enabled="true" />


    </RelativeLayout>

</ScrollView>
