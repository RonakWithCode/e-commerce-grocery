<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/MainBackgroundColor"
    android:layout_height="match_parent"
    tools:context=".Fragment.SiginFragment">

    <ImageView
        android:id="@+id/loginIcon"
        android:src="@drawable/adduser"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:contentDescription="@string/icon" />

    <TextView
        android:id="@+id/indan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/loginIcon"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="25dp"
        android:text="+91"
        android:textAlignment="center"
        android:textColor="@color/MainTextColor"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@drawable/underline_drawable"
        android:paddingTop="10dp" />




    <EditText
        android:id="@+id/Number"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="60dp"
        android:layout_below="@id/loginIcon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="@dimen/_5sdp"
        android:background="@drawable/underline_drawable"
        android:paddingRight="@dimen/_5sdp"
        android:focusable="true"
        android:layout_toEndOf="@+id/indan"
        android:autofillHints="phone"
        android:hint="123 456 7890"
        android:inputType="number"
        android:maxLength="10"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:paddingStart="12dp"
        android:textColor="@color/MainTextColor"
        android:textColorHint="@color/MainTextColor"
        android:textSize="32sp"
        tools:ignore="RtlSymmetry,TextFields" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Number"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="19dp"
        android:autoLink="web"
        android:text="@string/accept_terms_and_conditions"
        android:textColor="@color/MainTextColor"/>

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Number"
        android:layout_marginStart="8dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/checkBox"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/read_more"
        android:textColor="@color/Link" />

    <com.google.android.material.button.MaterialButton
        android:text="@string/continue_text"
        android:textSize="@dimen/_13ssp"
        android:enabled="true"
        android:background="@drawable/round_button"
        android:layout_alignParentStart="true"
        android:layout_below="@id/checkBox"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:id="@+id/button"
        android:textColor="@color/FixColorWhite"
        android:backgroundTint="@color/green_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- TextView to change language -->
    <TextView
        android:id="@+id/changeLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_alignParentBottom="true"
        android:text="@string/change_your_language"
        android:textColor="@color/Link"
        android:textSize="@dimen/_18ssp" />

</RelativeLayout>
