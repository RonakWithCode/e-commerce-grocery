                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/AddressType"
                        android:text="Delivering to Home"
                        android:textAlignment="center"
                        android:textColor="@color/MainTextColor"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/deliveryAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deliveryTo"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/AddressType"
                        android:maxLines="5"
                        android:text="6391 Elgin St. Celina, Delaware..."
                        android:textAlignment="textStart"
                        android:textColor="@color/HintMainTextColor"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/Change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_toEndOf="@id/deliveryTo"
                        android:text="@string/change"
                        android:textColor="@color/orange_secondary"
                        android:textSize="@dimen/_13ssp"
                        tools:ignore="RelativeOverlap" />


                </RelativeLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/Address_Box"
                    android:layout_marginTop="3dp"
                    app:dividerColor="@color/secondary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/note"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_below="@id/line4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:helperText="Note to Seller or delivery boy"
                    android:hint="@string/notes">

                    <com.google.android.material.textfield.TextInputEditText
                        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />



                </com.google.android.material.textfield.TextInputLayout>


            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10ssp">

        <TextView
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/pay_using"
            android:textColor="@color/MainTextColor"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:id="@+id/using"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/cod_amp_amp_upi"
            android:textColor="@color/HintMainTextColor"
            android:textSize="@dimen/_14ssp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/placeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/round_button"
            android:text="@string/place_order"
            android:textAlignment="center"
            android:textSize="@dimen/_15ssp" />

    </RelativeLayout>


    <ProgressBar

        android:id="@+id/progressCircular"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

</RelativeLayout>