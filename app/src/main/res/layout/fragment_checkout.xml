    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundColor"
    tools:context=".Fragment.CheckoutFragment">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/TopRelative_skeleton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/order_details_view_back_skeleton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@id/order_details_view_back_skeleton"
                    android:gravity="center"
                    android:paddingEnd="25dp"
                    android:text="@string/checkout"
                    android:textColor="@color/MainTextColor"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ProductView_skeleton"
                android:layout_below="@id/TopRelative_skeleton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/product_image_skeleton"
                    android:layout_width="80dp"
                    android:background="@drawable/rounded_corners"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingEnd="10dp"
                    android:src="@drawable/skeleton_shape"/>

                <TextView
                    android:id="@+id/product_name_skeleton"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:minLines="2"
                    android:background="@drawable/skeleton_shape"
                    android:layout_toEndOf="@id/product_image_skeleton"
                    android:textColor="@color/green_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/product_pricing_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_name_skeleton"
                    android:layout_toEndOf="@id/product_image_skeleton"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/product_price_skeleton"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/skeleton_shape"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/product_qty_layout_skeleton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:id="@+id/product_qty_down_skeleton"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:background="@drawable/skeleton_shape"
                            android:layout_weight="1"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/product_qty_skeleton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:gravity="center"
                            android:background="@drawable/skeleton_shape"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/product_qty_up_skeleton"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/skeleton_shape"
                            android:layout_marginStart="@dimen/_5sdp"
                            tools:ignore="NestedWeights" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_below="@+id/product_image_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/MainBorderColor"
                    android:alpha="0.9"/>


            </RelativeLayout>
            <LinearLayout
                android:id="@+id/coupon_code_apply_skeleton"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProductView_skeleton"
                android:layout_marginTop="@dimen/_10sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:background="@drawable/skeleton_shape"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/coupon_code">

                    <com.google.android.material.textfield.TextInputEditText
                        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />



                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:background="@drawable/skeleton_shape"
                    android:id="@+id/coupon_code_apply_btn_skeleton"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="apply"/>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/somethiong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coupon_code_apply_skeleton">


                <LinearLayout
