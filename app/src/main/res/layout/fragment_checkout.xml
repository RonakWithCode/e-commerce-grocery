                </LinearLayout>


                <LinearLayout
                    android:id="@+id/discount_box_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subtotal_box_skeleton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/discount_hint_skeleton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:background="@drawable/skeleton_shape"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/discount_skeleton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:background="@drawable/skeleton_shape"
                        android:textColor="@color/MainTextColor"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shipping_fee_box_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discount_box_skeleton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/shipping_fee_hint_skeleton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:background="@drawable/skeleton_shape"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ShippingPrice_skeleton"
                        android:layout_width="0dp"
                        android:background="@drawable/skeleton_shape"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/MainTextColor"
                        android:textSize="14sp" />

                </LinearLayout>


                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/line3_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/shipping_fee_box_skeleton"
                    android:layout_marginTop="3dp"
                    app:dividerColor="@color/secondary" />


                <LinearLayout
                    android:id="@+id/grand_total_box_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line3_skeleton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/grand_total_hint_skeleton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:background="@drawable/skeleton_shape"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TotalPrice_skeleton"
                        android:layout_width="0dp"
                        android:background="@drawable/skeleton_shape"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/MainTextColor"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grand_total_box_skeleton"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/Address_Box_skeleton"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/AddressType_skeleton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/skeleton_shape" />

                    <TextView
                        android:id="@+id/deliveryTo_skeleton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/AddressType_skeleton"
                        android:background="@drawable/skeleton_shape"
                        android:textAlignment="center"
                        android:textColor="@color/MainTextColor"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/deliveryAddress_skeleton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deliveryTo_skeleton"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/AddressType_skeleton"
                        android:maxLines="1"
                        android:background="@drawable/skeleton_shape"
                        android:textAlignment="center"
                        android:textColor="@color/HintMainTextColor"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/Change_skeleton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_toEndOf="@id/deliveryTo_skeleton"
                        android:background="@drawable/skeleton_shape"
                        android:textColor="@color/orange_secondary"
                        android:textSize="@dimen/_13ssp"
                        tools:ignore="RelativeOverlap" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/line4_skeleton"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/deliveryAddress_skeleton"
                        android:layout_marginTop="3dp"
                        app:dividerColor="@color/secondary" />

                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_below="@+id/somethiong"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/skeleton_shape"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:minLines="2"
                    android:layout_height="wrap_content"/>
                     <TextView
                    android:background="@drawable/skeleton_shape"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:minLines="2"
                    android:layout_height="wrap_content"/>
                     <TextView
                    android:background="@drawable/skeleton_shape"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:minLines="2"
                    android:layout_height="wrap_content"/>
                     <TextView
                    android:background="@drawable/skeleton_shape"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:minLines="2"
                    android:layout_height="wrap_content"/>
                     <TextView
                    android:background="@drawable/skeleton_shape"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:minLines="2"
                    android:layout_height="wrap_content"/>
                     <TextView
                    android:background="@drawable/skeleton_shape"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:minLines="2"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>


    </com.facebook.shimmer.ShimmerFrameLayout>


