    <style name="MoreButtonLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textColor">@color/FixBlack</item>
        <item name="android:background">@drawable/round_button_am</item>
        <item name="backgroundTint">@color/BorderMainRoundButtonColor</item>
<!--        <item name="android:background">@color/MainBorderColor</item>-->
    </style>
    <style name="EditTextLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:background">@drawable/round_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/MainTextColor</item>
        <item name="android:textColorHint">@color/MainTextColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:background">@color/MainBorderColor</item>-->
    </style>

    <style name="MaterialSearchBarLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColor</item>
        <item name="mt_dividerColor">@color/searchBarDividerColor</item>
        <item name="mt_navIconTint">@color/searchBarNavIconTintColor</item>
        <item name="mt_searchIconTint">@color/searchBarSearchIconTintColor</item>
        <item name="mt_clearIconTint">@color/searchBarClearIconTintColor</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColor</item>
        <item name="mt_backIconTint">@color/searchBarBackIconTintColor</item>
        <item name="mt_textCursorTint">@color/searchBarCursorColor</item>
        <item name="mt_textColor">@color/searchBarTextColor</item>
        <item name="mt_hintColor">@color/searchBarHintColor</item>
        <item name="mt_placeholderColor">@color/searchBarPlaceholderColor</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColor</item>
    </style>
    <style name="Animationboy">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FilledBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Customize other attributes here if needed -->
        <item name="boxStrokeColor">@color/HintMainTextColor</item>
        <item name="boxStrokeWidth">2dp</item>
