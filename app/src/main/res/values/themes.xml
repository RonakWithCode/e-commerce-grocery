<resources>
    <!-- Base application theme -->
    <style name="Theme.ECommerceGrocery" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange_secondary</item>
        <item name="colorSecondaryVariant">@color/orange_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Disable Force Dark Mode -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="WhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/green_primary</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_location_target</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="Theme.ECommerceGrocery.Home" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange_secondary</item>
        <item name="colorSecondaryVariant">@color/orange_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Disable Force Dark Mode -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <!-- Disable Force Dark Mode -->

        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/dialogbg</item>
    </style>

    <style name="Theme.ECommerceGrocery.noToolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange_secondary</item>
        <item name="colorSecondaryVariant">@color/orange_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Disable Force Dark Mode -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="MoreButtonLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textColor">@color/FixBlack</item>
        <item name="android:background">@drawable/round_button_am</item>
        <item name="backgroundTint">@color/BorderMainRoundButtonColor</item>
    </style>

    <style name="EditTextLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:background">@drawable/round_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/MainTextColor</item>
        <item name="android:textColorHint">@color/MainTextColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MaterialSearchBarLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColor</item>
        <item name="mt_dividerColor">@color/searchBarDividerColor</item>
        <item name="mt_navIconTint">@color/searchBarNavIconTintColor</item>
        <item name="mt_searchIconTint">@color/searchBarSearchIconTintColor</item>
        <item name="mt_clearIconTint">@color/searchBarClearIconTintColor</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColor</item>
        <item name="mt_backIconTint">@color/searchBarBackIconTintColor</item>
        <item name="mt_textCursorTint">@color/searchBarCursorColor</item>
        <item name="mt_textColor">@color/searchBarTextColor</item>
        <item name="mt_hintColor">@color/searchBarHintColor</item>
        <item name="mt_placeholderColor">@color/searchBarPlaceholderColor</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColor</item>
    </style>

    <style name="Animationboy">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FilledBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/HintMainTextColor</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="backgroundColor">@color/MainBackgroundColor</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/_32ssp</item>
    </style>

    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>
</resources>