    <style name="MenuButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>
    
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/green_primary</item>
    </style>
    
   <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="bottom_sheet_dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <!-- Rounded top corners for variant images -->
    <style name="RoundedTopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="OtpEditText">
        <item name="android:layout_width">@dimen/et_otp_width</item>
        <item name="android:layout_height">@dimen/et_otp_height</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_otp</item>
        <item name="android:background">@drawable/otp_edittext</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/trueBlack</item>
        <item name="android:importantForAutofill">no</item>
    </style>

</resources>